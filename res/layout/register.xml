<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  
    android:descendantFocusability="beforeDescendants"
      android:background="@color/gray70_transparent_back"
    android:focusableInTouchMode="true" >

   <RelativeLayout
                android:id="@+id/iv_app_logo"
                android:layout_width="match_parent"
                android:layout_height="68dp"
         
                android:background="@color/white" >

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp" >

                    <ImageView
                        android:id="@+id/iv_app_logo1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/ic_launcher" />
                     <TextView
                    android:id="@+id/txt_sparkzi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_marginLeft="8dp"
                     android:layout_marginTop="5dp"
                     android:textSize="16dp"
                     android:textColor="#000000"
                    android:layout_below="@+id/iv_app_logo1"
                    android:text="Sparkzi" />
                </RelativeLayout>

                <Button
                     android:id="@+id/b_enter_sparkzi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/rounded_button"
                     android:onClick="onClickRegister"
                    android:paddingLeft="5dp"
                     android:paddingRight="5dp"
                  android:textColor="@color/white"
                android:text="Enter Sparkzi"
                android:textSize="16dp"
                android:textStyle="bold" />

               
            </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_app_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
          android:paddingBottom="10dp"
         android:fillViewport="true"
         android:background="#ffffff"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

           
           
            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Username"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/app_theme"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_user_name"
                android:layout_alignRight="@+id/et_user_name"
                android:layout_below="@+id/et_user_name"
                android:hint="First Name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/app_theme"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_first_name"
                android:layout_alignRight="@+id/et_first_name"
                android:layout_below="@+id/et_first_name"
                android:hint="Last Name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/app_theme"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_first_name"
                android:layout_alignRight="@+id/et_first_name"
                android:layout_below="@+id/et_last_name"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/app_theme"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_first_name"
                android:layout_alignRight="@+id/et_first_name"
                android:layout_below="@+id/et_email"
                android:hint="Password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/app_theme"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_first_name"
                android:layout_alignRight="@+id/et_first_name"
                android:layout_below="@+id/et_password"
                android:hint="Confirm Password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/app_theme"
                android:textSize="15dp" />

