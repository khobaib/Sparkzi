<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true" >

    <ImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/sparkzi_logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_login" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Registration"
            android:textColor="@color/app_theme"
            android:textSize="25dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view1"
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/gray70_transparent_back" />

        <TextView
            android:id="@+id/tv_first_name"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/view1"
            android:layout_marginTop="25dp"
            android:gravity="right"
            android:text="First Name:"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_last_name"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_first_name"
            android:layout_below="@+id/tv_first_name"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="Last Name:"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_first_name"
            android:layout_below="@+id/tv_last_name"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="Email:"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_first_name"
            android:layout_below="@+id/tv_email"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="Password:"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_Confirm_password"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_first_name"
            android:layout_below="@+id/tv_password"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="Confirm Password:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_first_name"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tv_first_name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_last_name"
            android:layout_alignLeft="@+id/et_first_name"
            android:layout_alignRight="@+id/et_first_name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_email"
            android:layout_alignLeft="@+id/et_first_name"
            android:layout_alignRight="@+id/et_first_name"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_password"
            android:layout_alignLeft="@+id/et_first_name"
            android:layout_alignRight="@+id/et_first_name"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_Confirm_password"
            android:layout_alignLeft="@+id/et_first_name"
            android:layout_alignRight="@+id/et_first_name"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="16dp" />

        <View
            android:id="@+id/view2"
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_below="@+id/tv_Confirm_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/gray70_transparent_back" />

        <Button
            android:id="@+id/b_enter_sparkzi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:onClick="onClickRegister"
            android:padding="15dp"
            android:text="Enter Sparkzi"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
        
                <TextView
        android:id="@+id/tv_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b_enter_sparkzi"
        android:layout_marginTop="10dp"
        android:text="* All fields are required."
        android:textColor="@color/red"
        android:textSize="14dp"
        android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>