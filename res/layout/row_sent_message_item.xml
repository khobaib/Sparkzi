<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv_user_pp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_contact_picture" />

    <TextView
        android:id="@+id/tv_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@+id/iv_user_pp"
        android:gravity="right"
        android:background="@drawable/blue"
        android:text="message"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_message_body"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@+id/iv_user_pp"
        android:text="time"
        android:textColor="@color/gray70"
        android:textSize="18dp" />

    <!--
         <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/iv_user_pp"
        android:layout_marginTop="6dp" />
    -->

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/tv_message_time"
        android:layout_marginTop="6dp" />

</RelativeLayout>