<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/re_top_bar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" >

            <ImageView
                android:id="@+id/iv_app_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/txt_sparkzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_app_logo"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:text="Sparkzi"
                android:textColor="#000000"
                android:textSize="16dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/b_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/rounded_button"
            android:onClick="onClickLogin"
            android:padding="3dp"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_login_pannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_top_bar"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_layout" >

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_contact_picture_holo_light_rounded" />

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_user"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_user"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/iv_user"
            android:background="@android:color/transparent"
            android:hint="Username or Email"
            android:padding="10dp"
            android:textColor="@color/app_theme"
            android:textCursorDrawable="@null" />

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/iv_user"
            android:background="@color/abs__background_holo_dark" />

        <ImageView
            android:id="@+id/iv_pass"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/v1"
            android:layout_margin="5dp"
            android:background="@drawable/ic_pass" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_pass"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_pass"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/iv_pass"
            android:background="@android:color/transparent"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/app_theme"
            android:textCursorDrawable="@null" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_login_pannel"
        android:layout_centerHorizontal="true"
        android:text="Forget Password?"
        android:textColor="@color/app_theme"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>